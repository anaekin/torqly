<div class="row">
  <div class="col col-md-8 offset-md-2">
    <div class="d-flex justify-content-between mb-3">
      <h2 class="fw-bold text-primary text-start">Booking details</h2>
      <div class="text-end">
        <%= link_to "Back", @back_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
  <div class="col col-md-4 offset-md-2">
    <div class="card rounded-2 shadow-3-strong border border-secondary">
      <%= render "products/info/image", product: @booking.product %>

      <div class="card-body d-flex flex-column">
        <%= render "products/info/view", product: @booking.product %>
      </div>
    </div>
  </div>
  <div class="col col-md-4">
    <%= render "booking", booking: @booking %>
    <div class="d-flex flex-column align-items-end">
      <p><strong>License Number:</strong> <%= @booking.license_number %></p>
    </div>
  </div>
</div>
<div class="row">
  <div class="col col-md-8 offset-md-2">
    <div class="d-flex justify-content-between mb-3">
      <h2 class="fw-bold text-primary text-start">Payment details</h2>
      <div class="text-end">
        <%= link_to "Back", @back_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
  <div class="col col-md-4 offset-md-2">
    <%= render "bookings/booking", booking: @booking %>
  </div>
  <div class="col col-md-4">
    <%= form_with model: @payment, url: create_payment_path, local: true do |f|  %>
    <%= render "shared/form_errors", object: f.object %>
    <%= f.hidden_field :booking_id, value: @booking.id %>
    <div class="mb-3" data-mdb-input-init>
      <%= f.label :payment_type, class: "form-label" %>
      <%= f.select :payment_type,
                     [["Card","card"],["Bank Transfer","bank_transfer"],["Cash","cash"],["Other","other"]],
                     {},
                     class: "form-select", required: true %>
    </div>
    <div class="mb-3">
      <%= f.label :provider, "Provider", class: "form-label" %>
      <%= f.text_field :provider, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :payment_ref, "Payment reference", class: "form-label" %>
      <%= f.text_field :payment_ref,  class: "form-control" %>
    </div>


    <%= f.submit "Pay", class: "btn btn-primary w-100" %>
    <% end %>
  </div>
</div>
<h1 class="mb-3 h1 fw-bold text-center text-primary">Welcome to Torqly</h1>
<h4 class="mb-3 h4 fw-light text-muted text-center">Rent cars, motorcycles, or scooters</h4>

<div class="container my-4">

  <%= render "main/search" %>

  <hr class="my-4" />
  <div class="row">
    <% if !@products.present? %>
    <div class="col-md-12">Search for a product to see available products.</div>
    <% else %>
    <% @products.each do |product| %>
    <div class="col-md-4 mb-4">
      <div class="card rounded-2 shadow-3-strong border border-secondary">
        <% if product.image.attached? %>
        <%= image_tag url_for(product.image), class: "card-img-top card-img-fixed" %>
        <% else %>
        <img src="https://placehold.co/600x400" class="card-img-top card-img-fixed" alt="No image available">
        <% end %>
        <div class="card-body d-flex flex-column">
          <%= render "products/info/view", product: product %>
          <div class="gap-2 text-center">
            <%= link_to "View", product_path(product), class: "btn btn-primary", role: "button" %>
            <% if is_logged_in? %>
            <%= link_to "Book", new_booking_path(product_id: product.id, 
                                        start_date: params[:start_date].presence, 
                                        end_date: params[:end_date].presence), 
                                        class: "btn btn-outline-primary", 
                                        role: "button" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
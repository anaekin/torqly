<div class="row">
  <div class="col-md-4 offset-md-4">
    <h3 class="mb-4 fw-bold text-primary text-center">Edit profile</h3>
    <%= form_with model: Current.user, url: update_profile_path, method: :patch do |form| %>

    <%= render "shared/form_errors", object: form.object %>

    <div class="form-outline mb-3" data-mdb-input-init>
      <%= form.text_field :name, class: "form-control", required: true %>
      <%= form.label :name, class: "form-label" %>
    </div>
    <div class="form-outline mb-3" data-mdb-input-init>
      <%= form.email_field :email, class: "form-control", disabled: true %>
      <%= form.label :email, class: "form-label" %>
    </div>
    <div class="form-outline mb-3" data-mdb-input-init>
      <%= form.password_field :password, class: "form-control", placeholder: "Leave blank to keep current password" %>
      <%= form.label :password, class: "form-label" %>
    </div>
    <div class="form-outline mb-3" data-mdb-input-init>
      <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Leave blank to keep current password"%>
      <%= form.label :password_confirmation, class: "form-label" %>
    </div>
    <div class="text-center">
      <%= form.submit "Update profile", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>
<div class="container mt-4">
  <div class="row justify-content-between">
    <div class="col-md-8">
      <h2 class="mb-4 fw-bold text-primary text-start">All products</h2>
    </div>
    <div class="col-md-4 text-end">
      <%= link_to "Add New Product", new_product_path, class: "btn btn-success" %>
    </div>
  </div>
  <div class="row">
    <% @products.each do |product| %>
    <div class="col-md-4 mb-4">
      <div class="card rounded-2 shadow-3-strong border border-secondary">
        <% if product.image.attached? %>
        <%= image_tag url_for(product.image), class: "card-img-top card-img-fixed" %>
        <% else %>
        <img src="https://placehold.co/600x400" class="card-img-top card-img-fixed" alt="No image available">
        <% end %>
        <div class="card-body d-flex flex-column">
          <%= render "products/info/view", product: product %>
          <div class="gap-2 text-center">
            <%= link_to "View", product_path(product), class: "btn btn-primary", role: "button" %>
            <%= link_to "Edit", edit_product_path(product), class: "btn btn-outline-primary", role: "button" %>
            <%= link_to "Delete", product_path(product), class: "btn btn-danger", role: "button", method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }  %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
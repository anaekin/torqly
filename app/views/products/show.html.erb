<div class="row align-items-start">
  <div class="col-12">
    <div class="row justify-content-between mb-3">
      <div class="col-md-8">
        <h2 class="fw-bold text-primary text-start">Product details</h2>
      </div>
      <div class="col-md-4 text-end">
        <%= link_to "Back", @back_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
  <div class="col-12 col-md-6">
    <%= render "products/info/image", product: @product %>
  </div>
  <div class="col-12 col-md-6 h-100">
    <div class="d-flex flex-column">
      <%= render "products/info/view", product: @product %>
      <%= render "products/info/specs", product: @product %>

      <div class="d-flex gap-2 mb-3">
        <% if is_admin? %>
        <%= link_to "Edit", edit_product_path(@product), class: "btn btn-primary" %>
        <%= button_to "Delete", product_path(@product),
                        method: :delete,
                        data: { turbo_confirm: "Do you want to delete the product?" },
                        class: "btn btn-danger" %>

        <% end %>
        <%= link_to "Book", new_booking_path(@product), class: "btn btn-outline-primary", role: "button" %>
      </div>

    </div>
  </div>
</div>
<div class="row align-items-start">
  <div class="col-12">
    <div class="row justify-content-between mb-3">
      <div class="col-md-8">
        <h2 class="fw-bold text-primary text-start">Product details</h2>
      </div>
      <div class="col-md-4 text-end">
        <%= link_to "Back", @back_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
  <div class="col-12 col-md-6">
    <%= render "products/info/image", product: @product %>
  </div>
  <div class="col-12 col-md-6 h-100">
    <div class="d-flex flex-column">
      <%= render "products/info/view", product: @product %>
      <%= render "products/info/specs", product: @product %>
    </div>
  </div>
</div>
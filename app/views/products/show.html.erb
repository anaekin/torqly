<div class="row align-items-start">
  <div class="col-12">
    <div class="row justify-content-between mb-3">
      <div class="col-md-8">
        <h2 class="fw-bold text-primary text-start">Product details</h2>
      </div>
      <div class="col-md-4 text-end">
        <%= link_to "Back", products_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
  <div class="col-12 col-md-6">
    <% if @product.image.attached? %>
    <%= image_tag @product.image, class: "card-img-top card-img-ratio", alt: @product.title, loading: "lazy" %>
    <% else %>
    <img src="https://placehold.co/800x600?text=No+Image" class="card-img-top card-img-ratio" alt="No image">
    <% end %>
  </div>
  <div class="col-12 col-md-6">
    <div class="h-100">
      <div class="d-flex flex-column">
        <%= render "products/info/view", product: @product %>

        <div class="mt-2">
          <h4><%= @product.product_type.name %> Specs</h4>
          <% if @product.car? %>
          <%= render "products/cars_specs/view", desc: @product.car_description %>
          <% elsif @product.motorcycle? %>
          <%= render "products/motorcycle_specs/view", desc: @product.motorcycle_description %>
          <% elsif @product.scooter? %>
          <%= render "products/scooter_specs/view", desc: @product.scooter_description %>
          <% end %>
        </div>

        <!-- Actions -->
        <div class="mt-auto d-flex gap-2 pt-3">
          <%= link_to "Edit", edit_product_path(@product), class: "btn btn-primary" %>
          <%= button_to "Delete", product_path(@product),
                        method: :delete,
                        data: { turbo_confirm: "Do you want to delete the product?" },
                        class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>
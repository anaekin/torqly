<div class="row">
  <div class="col-md-4 offset-md-4">
    <h3 class="mb-4 fw-bold text-primary text-center">Reset your password</h3>
    <%= form_with model: @user, url: update_password_path(token: params[:token]), method: :patch do |form| %>

    <%= render "shared/form_errors", object: form.object %>

    <div class="form-outline mb-3" data-mdb-input-init>
      <%= form.email_field :email, class: "form-control", disabled: true %>
      <%= form.label :email, class: "form-label" %>
    </div>
    <div class="form-outline mb-3" data-mdb-input-init>
      <%= form.password_field :password, class: "form-control", required: true, placeholder: "Password" %>
      <%= form.label :password, class: "form-label" %>
    </div>
    <div class="form-outline mb-3" data-mdb-input-init>
      <%= form.password_field :password_confirmation, class: "form-control", required: true, placeholder: "Confirm your password" %>
      <%= form.label :password_confirmation, class: "form-label" %>
    </div>
    <div class="text-center">
      <%= form.submit "Change password", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>